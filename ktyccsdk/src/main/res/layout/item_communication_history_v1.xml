<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:ignore="InOrMmUsage">


    <ImageView
        android:id="@+id/head_img"
        android:layout_width="@dimen/d60"
        android:layout_height="@dimen/d60"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/d20"
        android:layout_marginTop="@dimen/d20"
        android:layout_marginBottom="@dimen/d10"
        android:src="@mipmap/icon_call_ok" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_call_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="@color/c_3D4249"
            android:textSize="@dimen/textNormal14" />

        <TextView
            android:id="@+id/tv_call_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:text="12345677888"
            android:textColor="@color/c_BEC2CA"
            android:textSize="@dimen/textNormal16" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00 12-20"
            android:textColor="@color/c_BEC2CA"
            android:textSize="@dimen/textNormal10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textNormal10"
            android:textColor="@color/c_42A6FE"/>


    </LinearLayout>


</LinearLayout>