<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout_site"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_site_select"
            android:layout_width="@dimen/d15"
            android:layout_height="@dimen/d15"
            android:layout_marginLeft="@dimen/d30"
            android:src="@mipmap/icon_selected"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_item_site_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:layout_marginLeft="@dimen/d20"
            android:layout_marginRight="@dimen/d30"
            android:gravity="center_vertical"
            android:text="boxtest"
            android:textSize="@dimen/textNormal14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:background="@color/p100_line_bg" />


</LinearLayout>