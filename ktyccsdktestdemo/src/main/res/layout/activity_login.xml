<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <com.xw.repo.XEditText
        android:id="@+id/phone_num_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d45"
        android:layout_marginRight="@dimen/d25"
        android:gravity="center_vertical"
        android:textSize="@dimen/textNormal16"
        android:layout_marginLeft="@dimen/d25"
        android:layout_marginTop="@dimen/d100"
        android:hint="用户名"
        android:background="@null"
        android:inputType="text" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/color_divide"
        android:layout_marginRight="@dimen/d25"
        android:layout_marginLeft="@dimen/d25" />

    <com.xw.repo.XEditText
        android:id="@+id/pwd_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d45"
        android:layout_marginRight="@dimen/d25"
        android:gravity="center_vertical"
        android:textSize="@dimen/textNormal16"
        android:layout_marginLeft="@dimen/d25"
        android:layout_marginTop="@dimen/d20"
        android:hint="密码"
        android:background="@null"
        android:inputType="textPassword" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/color_divide"
        android:layout_marginRight="@dimen/d25"
        android:layout_marginLeft="@dimen/d25" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d25"
        android:layout_marginTop="@dimen/d20"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/home_et_host"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="https://tky.ketianyun.com"/>

        <TextView
            android:id="@+id/home_tv_switch_url_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_home_btn_bg"
            android:gravity="center"
            android:padding="8dp"
            android:text="切换"
            android:textColor="#fff"/>

    </LinearLayout>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d45"
        android:layout_marginRight="@dimen/d15"
        android:layout_marginLeft="@dimen/d25"
        android:layout_marginTop="@dimen/d30"
        app:rv_isRadiusHalfHeight="true"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/textNormal16"
        app:rv_backgroundColor="@color/c_039fd9"
        app:rv_cornerRadius="@dimen/d5" />

</LinearLayout>