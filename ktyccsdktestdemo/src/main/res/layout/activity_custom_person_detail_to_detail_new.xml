<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/head_empty_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d24"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d44"
        android:layout_below="@id/head_empty_view"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:paddingLeft="@dimen/d15"
            android:paddingRight="@dimen/d15"
            android:src="@drawable/fanhui" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="编辑信息"
            android:textColor="@color/black"
            android:textSize="@dimen/textNormal16" />


        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d15"
            android:src="@drawable/delete_detail" />


    </RelativeLayout>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:layout_marginBottom="@dimen/d20"
        android:background="@drawable/button_bg"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/textNormal20" />

    <ScrollView
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/save_btn"
        android:layout_below="@id/layout_title_bar"
        android:layout_marginBottom="@dimen/d20">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginTop="@dimen/d10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/d18"
                        android:layout_height="@dimen/d20"
                        android:src="@mipmap/icon_message_edit_contact" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d10"
                        android:drawablePadding="@dimen/d10"
                        android:text="联系人信息"
                        android:textColor="@color/c_3D4249"
                        android:textSize="@dimen/textNormal16" />

                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginTop="@dimen/d13"
                    android:layout_marginRight="@dimen/d20"
                    app:cardCornerRadius="@dimen/d10"
                    app:cardElevation="0.5dp"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/d50"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/d15"
                            android:paddingTop="5dp"
                            android:paddingRight="@dimen/d20"
                            android:paddingBottom="5dp">

                            <TextView
                                android:id="@+id/tv_force_flag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:paddingTop="4dp"
                                android:text="*"
                                android:textColor="@color/red_btn_bg_color"
                                android:textSize="@dimen/textNormal14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="姓名"
                                android:textColor="@color/c_3D4249"
                                android:textSize="@dimen/textNormal14" />


                            <EditText
                                android:id="@+id/user_name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/d10"
                                android:layout_weight="1"
                                android:background="@drawable/selector_input_gray_bg"
                                android:gravity="right|center_vertical"
                                android:paddingRight="@dimen/d5"
                                android:singleLine="true"
                                android:textColor="@color/c_999999"
                                android:textSize="@dimen/textNormal14" />

                            <ImageView
                                android:id="@+id/name_detail_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/detail"
                                android:visibility="gone" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_line_height"
                            android:background="@color/line_background" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/d50"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/d15"
                            android:paddingRight="@dimen/d20">

                            <TextView
                                android:id="@+id/tv_phone_force_flag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:gravity="center_vertical"
                                android:paddingTop="4dp"
                                android:text="*"
                                android:textColor="@color/red_btn_bg_color"
                                android:textSize="@dimen/textNormal14"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/tv_phone_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="电话"
                                android:textColor="@color/c_3D4249" />

                            <EditText
                                android:id="@+id/phone_num"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/d10"
                                android:layout_weight="1"
                                android:background="@null"
                                android:enabled="false"
                                android:gravity="right|center_vertical"
                                android:paddingRight="@dimen/d5"
                                android:singleLine="true"
                                android:textColor="@color/c_999999"
                                android:textSize="@dimen/textNormal14" />

                            <ImageView
                                android:id="@+id/phone_detail_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d18"
                                android:src="@drawable/detail"
                                android:visibility="gone" />


                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginTop="@dimen/d10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/d18"
                        android:layout_height="@dimen/d20"
                        android:src="@mipmap/icon_message_edit_selfdefined" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d10"
                        android:drawablePadding="@dimen/d10"
                        android:text="自定义信息"
                        android:textColor="@color/c_3D4249"
                        android:textSize="@dimen/textNormal16" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginTop="@dimen/d13"
                    android:layout_marginRight="@dimen/d20"
                    app:cardCornerRadius="@dimen/d10"
                    app:cardElevation="0.5dp"
                    app:cardUseCompatPadding="false">


                    <LinearLayout
                        android:id="@+id/layout_defined_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />


                </android.support.v7.widget.CardView>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>