<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="@dimen/d44"
        android:background="@color/white"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui"
            android:paddingLeft="@dimen/d15"
            android:paddingRight="@dimen/d15"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="编辑信息"
            android:textColor="@color/black"
            android:textSize="@dimen/textNormal16"
            />


        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_detail"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d15"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="联系人信息"
        android:textColor="@color/c_3D4249"
        android:textSize="@dimen/textNormal16"
        android:drawableLeft="@drawable/contact"
        android:drawablePadding="@dimen/d10"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginTop="@dimen/d10"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:layout_marginTop="@dimen/d13"
        app:cardCornerRadius="@dimen/d10"
        app:cardElevation="0.5dp"
        app:cardUseCompatPadding="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/d50"
                android:paddingLeft="@dimen/d20"
                android:paddingRight="@dimen/d20"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/c_3D4249"
                    android:layout_centerVertical="true"
                    />


                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:layout_marginRight="@dimen/d13"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textNormal14"
                    android:textColor="@color/c_999999"
                    android:layout_toLeftOf="@id/name_detail_image"
                    />
                <ImageView
                    android:id="@+id/name_detail_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/detail"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />




            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_line_height"
                android:background="@color/line_background"
                />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/d50"
                android:paddingLeft="@dimen/d20"
                android:paddingRight="@dimen/d20"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    android:textColor="@color/c_3D4249"
                    android:layout_centerVertical="true"
                    />


                <TextView
                    android:id="@+id/phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678"
                    android:layout_marginRight="@dimen/d13"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/textNormal14"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/phone_detail_image"
                    />
                <ImageView
                    android:id="@+id/phone_detail_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/detail"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />




            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_line_height"
                android:background="@color/line_background"
                android:visibility="gone"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/d20"
                android:paddingRight="@dimen/d20"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="备注"
                    android:gravity="center_vertical"
                    android:textColor="@color/c_3D4249"
                    />


                <com.flyco.roundview.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minHeight="@dimen/d100"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginTop="@dimen/d10"
                    android:layout_marginBottom="@dimen/d10"
                    app:rv_backgroundColor="@color/c_FAFAFA"
                    app:rv_cornerRadius="@dimen/d8"
                    >

                    <EditText
                        android:id="@+id/user_beizhu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="12345678"
                        android:background="@null"
                        android:textSize="@dimen/textNormal14"
                        android:layout_margin="@dimen/d10"
                        />

                </com.flyco.roundview.RoundLinearLayout>





            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>



    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_margin="@dimen/d20"
        android:text="保存"
        android:textSize="@dimen/textNormal20"
        android:textColor="@color/white"
        />


</LinearLayout>