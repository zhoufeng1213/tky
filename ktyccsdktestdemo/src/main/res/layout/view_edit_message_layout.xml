<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/d50"
        android:paddingLeft="@dimen/d20"
        android:paddingTop="5dp"
        android:paddingRight="@dimen/d20"
        android:paddingBottom="5dp">


        <TextView
            android:id="@+id/tv_defined_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名"
            android:textColor="@color/c_3D4249" />


        <EditText
            android:id="@+id/et_defined_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d10"
            android:layout_weight="1"
            android:background="@drawable/selector_input_gray_bg"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/d5"
            android:text="哈哈"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textNormal14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_defined_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d10"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/d5"
            android:text="哈哈"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/textNormal14" />

        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d8"
            android:src="@drawable/detail"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_line_height"
        android:background="@color/line_background" />


</LinearLayout>