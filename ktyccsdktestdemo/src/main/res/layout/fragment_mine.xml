<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    >

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/d15">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/user_image"
            android:layout_width="@dimen/d60"
            android:layout_height="@dimen/d60"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="T"
            android:textSize="@dimen/textNormal16"
            android:textColor="@color/white"
            app:rv_backgroundColor="@color/color_main_bule"
            app:rv_isRadiusHalfHeight="true" />


        <LinearLayout

            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/d15"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="123"
                android:gravity="center_vertical"
                android:textSize="@dimen/textNormal18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/textNormal13"
                android:layout_marginTop="@dimen/d6"
                android:visibility="gone"
                android:text="123" />


        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right" />


    </LinearLayout>


    <com.flyco.roundview.RoundTextView
        android:id="@+id/log_out_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d45"
        android:text="注销登录"
        app:rv_backgroundColor="@color/white"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="@dimen/d10" />

</LinearLayout>